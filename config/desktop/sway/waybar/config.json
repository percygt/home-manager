[
  {
    "backlight": {
      "format": "{icon}",
      "format-icons": [
        "󰃞",
        "󰃟",
        "󰃠"
      ],
      "on-scroll-down": "brightnessctl set 5%-",
      "on-scroll-up": "brightnessctl set +5%",
      "tooltip": false
    },
    "battery": {
      "format": "{icon} {capacity}%",
      "format-alt": "{icon} {time}",
      "format-charging": " {capacity}%",
      "format-full": "{icon} {capacity}%",
      "format-good": "{icon} {capacity}%",
      "format-icons": [
        "",
        "",
        "",
        "",
        ""
      ],
      "format-plugged": "<span size='medium'></span>",
      "states": {
        "critical": 10,
        "good": 95,
        "warning": 20
      }
    },
    "clock#date": {
      "format": "{:%m.%d.%y}",
      "interval": 3600,
      "max-length": 7,
      "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },
    "clock#icon": {
      "format": "<span font='9' rise='-4444'> </span>"
    },
    "clock#time": {
      "format": "{:%I:%M:%S}",
      "interval": 1,
      "min-length": 7,
      "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },
    "cpu": {
      "format": "{icon0}{icon1}{icon2}{icon3}{icon4}{icon5}{icon6}{icon7}",
      "format-icons": [
        "▁",
        "▂",
        "▃",
        "▄",
        "▅",
        "▆",
        "▇",
        "<span color='red'>█</span>"
      ],
      "interval": 1
    },
    "custom/lock": {
      "format": "<small>󰷛</small>",
      "on-click": "swaymsg exec swaylock",
      "tooltip": false
    },
    "custom/logout": {
      "format": "",
      "on-click": "swaymsg exit",
      "tooltip": false
    },
    "custom/power": {
      "format": "⏻",
      "on-click": "systemctl poweroff",
      "tooltip": false
    },
    "custom/reboot": {
      "format": "󰜉",
      "on-click": "systemctl reboot",
      "tooltip": false
    },
    "custom/rebuild": {
      "exec": "waybar-rebuild-exec",
      "format": "{}",
      "interval": 2,
      "max-length": 12,
      "on-click": "toggle-sway-window --id=system-software-update  -- foot --title=NixosRebuild --app-id=system-software-update -- journalctl -efo cat -u nixos-rebuild.service",
      "return-type": "json",
      "signal": 12
    },
    "custom/suspend": {
      "format": "󰪓",
      "on-click": "systemctl suspend",
      "tooltip": false
    },
    "custom/wlsunset": {
      "exec": "if systemctl --user --quiet is-active wlsunset.service; then echo '󰖔'; else echo '󰃚'; fi",
      "format": "{}",
      "on-click": "toggle-service wlsunset; pkill -SIGRTMIN+8 waybar",
      "signal": 8,
      "tooltip": false
    },
    "exclusive": true,
    "fixed-center": true,
    "group/group-power": {
      "drawer": {
        "children-class": "group-power",
        "transition-duration": 500,
        "transition-left-to-right": false
      },
      "modules": [
        "custom/power",
        "custom/suspend",
        "custom/logout",
        "custom/lock",
        "custom/reboot"
      ],
      "orientation": "inherit"
    },
    "gtk-layer-shell": true,
    "height": 25,
    "idle_inhibitor": {
      "format": "{icon}",
      "format-icons": {
        "activated": "󰌿",
        "deactivated": "󱙱"
      }
    },
    "layer": "top",
    "margin-left": 5,
    "margin-right": 5,
    "margin-top": 5,
    "memory": {
      "format": "󰆼 {percentage}%     󰿡  {swapPercentage}%",
      "interval": 30,
      "on-click": "toggle-sway-window --id btop -- foot --app-id=btop btop",
      "tooltip": true,
      "tooltip-format": "{used:0.1f}G/{total:0.1f}G | {swapUsed:0.1f}G/{swapTotal:0.1f}G"
    },
    "modules-center": [
      "clock#time",
      "clock#icon",
      "clock#date"
    ],
    "modules-left": [
      "sway/workspaces",
      "sway/window"
    ],
    "modules-right": [
      "mpris",
      "tray",
      "cpu",
      "memory",
      "temperature",
      "wireplumber",
      "custom/rebuild",
      "pulseaudio#source",
      "idle_inhibitor",
      "custom/wlsunset",
      "backlight",
      "network",
      "battery",
      "group/group-power"
    ],
    "mpris": {
      "dynamic-len": 45,
      "dynamic-order": [
        "artist",
        "title",
        "album"
      ],
      "format": "<span font='9' rise='-4444'>{player_icon} {dynamic}</span>",
      "format-paused": "<span font='10' rise='-4444'>{status_icon} {dynamic}</span>",
      "max-length": 100,
      "player-icons": {
        "default": " "
      },
      "status-icons": {
        "paused": " "
      }
    },
    "network": {
      "format-disconnected": "󰲛",
      "format-ethernet": "󰈀",
      "format-linked": "󰈀 (No IP)",
      "format-wifi": "",
      "max-length": 15,
      "on-click": "toggle-sway-window --id wpa_gui -- wpa_gui",
      "tooltip-format": "{ifname} / {essid} ({signalStrength}%) / {ipaddr}"
    },
    "output": "HDMI-A-1",
    "passthrough": false,
    "position": "top",
    "pulseaudio#source": {
      "format": "{format_source}",
      "format-source": "",
      "format-source-muted": "",
      "min-length": 2,
      "on-click": "pamixer --default-source -t",
      "tooltip-format": "{source_volume}% / {desc}"
    },
    "spacing": 5,
    "sway/mode": {
      "format": "<span style=\"italic\">{}</span>"
    },
    "sway/window": {
      "all-outputs": true,
      "format": "<span font='9' rise='-4444'>{}</span>",
      "icon": true,
      "icon-size": 12
    },
    "sway/workspaces": {
      "disable-scroll": true,
      "format": "{icon}",
      "format-icons": {
        "0-home": "󰋜"
      },
      "on-click": "activate",
      "persistent-workspaces": {
        "0-home": [
          "eDP-1"
        ],
        "1": [],
        "2": [],
        "3": [],
        "4": [],
        "5": []
      }
    },
    "temperature": {
      "critical-threshold": 80,
      "format": "<small>{icon}</small> {temperatureC}°C",
      "format-icons": [
        "",
        "",
        "",
        "",
        ""
      ],
      "on-click": "toggle-sway-window --id btop -- foot --app-id=btop btop",
      "thermal-zone": 7,
      "tooltip": false
    },
    "tray": {
      "icon-size": 12,
      "spacing": 5
    },
    "wireplumber": {
      "format": "{icon}  {volume}% {node_name}",
      "format-icons": {
        "default": [
          "",
          "",
          ""
        ]
      },
      "format-muted": " ",
      "max-volume": 100,
      "on-click": "pamixer --toggle-mute",
      "on-click-right": "toggle-sway-window --id pavucontrol -- pavucontrol",
      "scroll-step": 5,
      "tooltip-format": "{source_volume}% / {desc}"
    }
  },
